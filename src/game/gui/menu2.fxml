<GridPane alignment="center" hgap="10" styleClass="root" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="game.gui.Controller">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
   
       <Text id="welcome-text" text="Tanks" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   
   
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
      <children>
            <JFXButton buttonType="RAISED" onAction="#handleSinglePlayerButtonAction" style="-fx-background-color: #8eeeefff;" text="SinglePlayer" textFill="WHITE" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
      <children>
              <JFXButton onAction="#handleMultiplayerButtonAction" text="Multiplayer" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
      <children>
              <JFXButton onAction="#handleSettingsButtonAction" text="Settings" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
      <children>
              <JFXButton onAction="#handleRankingsButtonAction" text="Rankings" />
      </children>
       </HBox>
   
       <HBox alignment="CENTER" spacing="20" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
      <children>
              <JFXButton onAction="#handleQuitButtonAction" text="Quit" />
      </children>
       </HBox>
   
       <!--<Button text = "Single Player"-->
       <!--GridPane.columnIndex="0" GridPane.rowIndex="1"-->
       <!--onAction="#handleSinglePlayerButtonAction"/>-->
   
       <!--<Button text = "Multiplayer"-->
       <!--GridPane.columnIndex="0" GridPane.rowIndex="2"-->
       <!--onAction="#handleMultiplayerButtonAction"/>-->
   
       <Text fx:id="actiontarget" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

