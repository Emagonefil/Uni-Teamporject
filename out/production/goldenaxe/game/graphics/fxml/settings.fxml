<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox id="pane" styleClass="vbox"
      fx:controller="game.graphics.SettingsController"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="TOP_LEFT">
         <ToggleButton fx:id="music" styleClass="music" layoutX="10" layoutY="100">
            <HBox.margin>
               <Insets>
                  <right>10</right>
               </Insets>
            </HBox.margin>
         </ToggleButton>
         <ToggleButton fx:id="sound" styleClass="sound" layoutX="60" layoutY="100">
         </ToggleButton>
      </HBox>
      <Label alignment="CENTER" styleClass="title"
             text="CLASH OF TANKS">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label text="Music Volume"></Label>
      <JFXSlider fx:id="musicSlider"></JFXSlider>
      <Label text="Sound Effects Volume"></Label>
      <JFXSlider fx:id="soundSlider"></JFXSlider>

      <JFXButton onAction="#model" text="SELECT TANK MODEL" >
      </JFXButton>
      <JFXButton onAction="#back" text="BACK" >
      </JFXButton>
   </children>

   <stylesheets>
      <URL value="@../style.css"/>
   </stylesheets>
</VBox>
