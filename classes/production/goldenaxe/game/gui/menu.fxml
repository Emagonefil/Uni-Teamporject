<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import com.jfoenix.controls.JFXButton?>
<GridPane fx:controller="game.graphics.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text id="welcome-text" text="Tanks"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>


    <HBox spacing="10" alignment="CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="1"
          GridPane.columnSpan="2">
        <Button style="-fx-background-color: #8eeeefff" text = "Singleplayer"
                onAction="#handleSinglePlayerButtonAction"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="2"
          GridPane.columnSpan="2">
        <Button text = "Multiplayer"
                onAction="#handleMultiplayerButtonAction"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="3"
          GridPane.columnSpan="2">
        <Button text = "Settings"
                onAction="#handleSettingsButtonAction"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="4"
          GridPane.columnSpan="2">
        <Button text = "Rankings"
                onAction="#handleRankingsButtonAction"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="5"
          GridPane.columnSpan="2">
        <Button text = "Quit"
                onAction="#handleQuitButtonAction"/>
    </HBox>

    <!--<Button text = "Single Player"-->
    <!--GridPane.columnIndex="0" GridPane.rowIndex="1"-->
    <!--onAction="#handleSinglePlayerButtonAction"/>-->

    <!--<Button text = "Multiplayer"-->
    <!--GridPane.columnIndex="0" GridPane.rowIndex="2"-->
    <!--onAction="#handleMultiplayerButtonAction"/>-->

    <Text fx:id="actiontarget"
          GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>

    <!--<stylesheets>-->
        <!--<URL value="@style.css"/>-->
    <!--</stylesheets>-->
</GridPane>